@using WebUI.Models.ViewModels.ClassModel
@model ClassViewModel
@{ 
    var hasGroups = Model.GroupNames.Any();
}

<div class="card card-body bg-dark my-auto text-light" style="width: 60%">
    
    <div>
        <h4>Subject: @Model.SubjectName</h4>
        <h4>Lecturer: @Model.LecturerName</h4>
        <h4>Start: @Model.Class.StartDate.ToString("g")</h4>
        <h4>End: @Model.Class.EndDate.ToString("g")</h4>
        <h4>Cabinet: @Model.Class.CabinetId</h4>

        @if (hasGroups)
        {
            <h5>Groups:</h5>
            @foreach (var name in Model.GroupNames)
            {
                <h5>@name</h5>
            }
        }
    </div>

    <form asp-action="Update" asp-controller="Classes" asp-route-id="@Model.Class.Id" method="get">
        <button type="submit" class="btn btn-success">
            Update class
        </button>
    </form>

    <form asp-action="Delete" asp-controller="Classes" asp-route-id="@Model.Class.Id" method="get">
        <button type="submit" class="btn btn-danger">
            Delete class
        </button>
    </form>

</div>