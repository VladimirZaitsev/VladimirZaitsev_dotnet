@using BLL.Models
@model Subject

<div class="card card-body bg-dark my-auto text-light" style="width: 60%">
    <h4>@Model.Name</h4>

    <form asp-action="Update" asp-controller="Subject" asp-route-id="@Model.Id" method="get">
        <button type="submit" class="btn btn-success">
            Update subject
        </button>
    </form>

    <form asp-action="Delete" asp-controller="Subject" asp-route-id="@Model.Id" method="get">
        <button type="submit" class="btn btn-danger">
            Delete subject
        </button>
    </form>

</div>