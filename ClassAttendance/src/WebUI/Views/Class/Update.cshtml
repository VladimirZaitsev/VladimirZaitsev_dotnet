@using WebUI.Models.ViewModels.ClassModel
@model ClassManageViewModel

<form asp-action="Update" asp-controller="Class" asp-antiforgery="true">
    <div>
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="SubjectId"></label>
            <select asp-for="SubjectId" asp-items="@(new SelectList(Model.Subjects, "Id", "Name"))"></select>
        </div>

        <div>
            <label asp-for="LecturerId"></label>
            <select asp-for="LecturerId" asp-items="@(new SelectList(Model.Lecturers, "Id", "LastName"))"></select>
        </div>

        <div>
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" />
        </div>

        <div>
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" />
        </div>

        <div>
            <label asp-for="CabinetId"></label>
            <input asp-for="CabinetId" />
        </div>

        <div class="form-group">
            @foreach (var group in Model.Groups)
            {
                <input type="checkbox" name="groups" value="@group.Name"
                       @(Model.SelectedGroups.Contains(group) ? "checked=\"checked\"" : "") />@group.Name <br />
                }
        </div>


        <div>
            <input type="submit" value="Save" />
        </div>
    </div>
</form>