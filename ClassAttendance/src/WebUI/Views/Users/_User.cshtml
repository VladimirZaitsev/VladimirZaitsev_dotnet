@using BLL.Models
@model User

<div class="card card-body bg-dark my-auto text-light" style="width: 60%">

    <div>
        <h4>User: @($"{Model.FirstName} {Model.LastName}")</h4>
        <h4>Email: @Model.Email</h4>
    </div>

    <form asp-action="Update" asp-controller="Users" asp-route-id="@Model.Id" method="get">
        <button type="submit" class="btn btn-success">
            Update user
        </button>
    </form>

    <form asp-action="Delete" asp-controller="Users" asp-route-id="@Model.Id" method="get">
        <button type="submit" class="btn btn-danger">
            Delete user
        </button>
    </form>

</div>