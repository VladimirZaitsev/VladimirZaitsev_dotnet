@using BLL.Models
@model Lecturer
@{
    var name = Model.FirstName + " " + Model.LastName;
}

<div class="card card-body bg-dark my-auto text-light" style="width: 60%">
    <h4>@name</h4>
    <h3>@Model.Position</h3>

    <form asp-action="Update" asp-controller="Lecturer" asp-route-id="@Model.Id" method="get">
        <button type="submit" class="btn btn-success">
            Update lecturer
        </button>
    </form>

    <form asp-action="Delete" asp-controller="Lecturer" asp-route-id="@Model.Id" method="get">
        <button type="submit" class="btn btn-danger">
            Delete lecturer
        </button>
    </form>

    <form asp-action="Lecturer" asp-controller="MissedClass" asp-route-id="@Model.Id" method="get">
        <button type="submit" class="btn btn-primary">
            Get missed lectures
        </button>
    </form>

</div>